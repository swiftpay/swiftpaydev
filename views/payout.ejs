 <% include loginsidebar %>

  <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
		 <div class="row">
				<div class="col-lg-12">
					<h3 class="page-header"><i class="fa fa-money"></i>Payout</h3>
					<ol class="breadcrumb">
						<li><i class="fa fa-money"></i>Payout</li>	
					</ol>
				</div>
			</div>

			 <div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div role="alert" class=" col-md-12 info-box red-bg" style="font-size: 20px;">
					<div> <i style="font-size: 60px;" class="fa fa-warning"></i></div>
