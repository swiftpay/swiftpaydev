<% include loginheader %>

<% include loginsidebar %>

  <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
		 <div class="row">
				<div class="col-lg-12">
					<h3 class="page-header"><i class="fa fa-laptop"></i> Dashboard</h3>
					<ol class="breadcrumb">
						<li><i class="fa fa-laptop"></i>Dashboard</li>	
					</ol>
				</div>
			</div>
             
			  <div class="row">
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box blue-bg">
						 <i class="icon_bag"></i>
						<div class="count"><%= user.refferals.length * 0.5 %>%</div>
						<div class="title">additional stock value</div>						
					</div><!--/.info-box-->			
				</div><!--/.col-->
				
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box brown-bg">
						<i class="fa fa-shopping-cart"></i>
						<div class="count"><%= stock %></div>
						<div class="title 
							 <% if (status == 'Confirm'){ %>
				          		text-success
				            <% } else { %>
				           		text-danger
				             <% } %>
						"><%= status %></div>	
						<div class="title">current stock</div>						
					</div><!--/.info-box-->			
				</div><!--/.col-->	
				
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box dark-bg">
						<i class="fa fa-thumbs-o-up"></i>
						<div class="count"><%= user.refferals.length %></div>
						<div class="title">refferals</div>						
					</div><!--/.info-box-->			
				</div><!--/.col-->
			</div><!--/.row-->

			<div class="row">
                  <div class="col-lg-6">
                      <section class="panel">
                          <header class="panel-heading">
                              Basic Details
                          </header>
                          <div class="panel-body text-center">
                            <img style="width: 200px;" src="/images/logo.png" alt="Team" class="img-circle">
							<h3><strong><i class="fa fa-user"></i>: <%= user.fullname %></strong></h3>
							<h4><i class="fa fa-phone"></i>: <%= user.contact %></h4>
							<h4><i class="icon_house_alt"></i>: <%= user.email %></h4>
							<h4><i class="icon_profile"></i>: <%= user.username %></h4>
                          </div>
                      </section>
                  </div>
               </div><!--/.row-->

          </section>
      </section>
      <!--main content end-->
		 

<% include loginfooter %>