<% include adminloginheader %>


 <% include adminloginsidebar %>

  <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
     <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa-laptop"></i>Stock details</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-laptop"></i>Stock details</li>  
          </ol>
        </div>
      </div>

		  <div class="col-md-12">
    
		  	<div class="row">
				  <section class="panel">
            <header class="panel-heading">
                 <p class="text-danger"> Pending users</p>
            </header>
             <div class="table-responsive">
            <table class="table table-striped table-advance table-hover">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Pay date</th>
                      <th>Depositor name</th>
                      <th>Amount</th>
                    </tr>
                  </thead>
                  <tbody>
                <% for(var i=0; i < stock.users.length; i++) { %>
                    <tr>
                      <td>
                         <% if ( stock.users[i].user == null){ %>
                           no user
                        <% } else { %>
                          <%= stock.users[i].user.username %>
                         <% } %>
                      </td>
                      <td> 
                          <% if ( stock.users[i].payAt == null){ %>
                           pending
                        <% } else { %>
                          <%= stock.users[i].payAt %>
                         <% } %>
                      </td>
                       <td> 
                          <% if ( stock.users[i].depositorname == null){ %>
                           pending
                        <% } else { %>
                          <%= stock.users[i].depositorname %>
                         <% } %>
                      </td>
                      <td> 
                          <% if ( stock.users[i].amount == null){ %>
                           pending
                        <% } else { %>
                          <%= stock.users[i].amount %>
                         <% } %>
                      </td>
                      <td>
                       <div class="btn-group">
                            <% if ( stock.users[i].user == null){ %>
                            <a class="btn btn-danger" href="/admin/remove/<%= stock._id %>/<%= stock.users[i]._id %>"><i class="icon_close_alt2"></i></a>
                          <% } else { %>
                            <a class="btn btn-primary" href="/admin/userdetails/<%= stock.users[i].user._id %>"><i class="icon_plus_alt2"></i></a>
                           <% } %>

                            <% if ( stock.users[i].amount != null){ %>
                               <a class="btn btn-success" href="/admin/confirm/<%= stock.users[i].user._id %>/<%= stock.name %>"><i class="icon_check_alt2"></i></a>
                             <% } %>

                      </div>
                      </td>
                    </tr>
	  			      <% } %>
                  </tbody>
                </table>
                </div>
                </section>
		  	</div>
		</div>
    </section>
    </section>


<% include adminloginfooter %>