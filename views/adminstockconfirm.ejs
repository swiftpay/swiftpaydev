<% include adminloginheader %>


 <% include adminloginsidebar %>

  <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
     <div class="row">
        <div class="col-lg-12">
          <h3 class="page-header"><i class="fa fa-laptop"></i>Stock details</h3>
          <ol class="breadcrumb">
            <li><i class="fa fa-laptop"></i>Stock details</li>  
          </ol>
        </div>
      </div>

		  <div class="col-md-12">
     
		  	<div class="row">
				  <section class="panel">
            <header class="panel-heading">
                <p class="text-success"> Confirm users</p>
            </header>
             <div class="table-responsive">
            <table class="table table-striped table-advance table-hover">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Pay date</th>
                      <th>Depositor name</th>
                      <th>Amount</th>
                       <th>Payed</th>
                    </tr>
                  </thead>
                  <tbody>
                <% for(var i=0; i < stock.users.length; i++) { %>
                    <tr>
                      <td>
                          <%= stock.users[i].user.username %>
                      </td>
                      <td> 
                          <%= stock.users[i]. confirmAt %>
                      </td>
                       <td> 
                          <%= stock.users[i].depositorname %>
                      </td>
                      <td> 
                          <%= stock.users[i].amount %>
                      </td>
                       <td class="
                           <% if (stock.users[i].status == false){ %>
                            text-danger
                            <% } else { %>
                            text-success
                             <% } %>
                       "> 
                          <%= stock.users[i].status %>
                      </td>
                      <td>
                       <% if (stock.users[i].status == false){ %>
                         <div class="btn-group">
                              <a class="btn btn-success" href="/admin/pay/<%= stock.name %>/<%= stock.users[i].user._id %>"><i class="icon_check_alt2"></i></a>
                        </div>
                         <div class="btn-group">
                              <a class="btn btn-primary" href="/admin/userdetails/<%= stock.users[i].user.username %>"><i class="icon_plus_alt2"></i></a>
                        </div>
                        <% } else { %>
                             <div class="btn-group">
                               <a class="btn btn-primary" href="/admin/userdetails/<%= stock.users[i].user.username %>"><i class="icon_plus_alt2"></i></a>
                        </div>
                         <% } %>
                      </td>
                    </tr>
	  			      <% } %>
                  </tbody>
                </table>
                </div>
                </section>
		  	</div>
		</div>
    </section>
    </section>


<% include adminloginfooter %>